@model DonorProject.Models.DonorRecord

<h2 class="text-info">@(Model.dID!=null? "Edit":"Create") Donor Record</h2>

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.dID != null)
        {
            <input type="hidden" asp-for="dID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="name">Name</label>
            </div>
            <div class="col-6">
                <input asp-for="name" class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="nric">NRIC</label>
            </div>
            <div class="col-6">
                <input asp-for="nric" class="form-control" />
            </div>
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="address">Address</label>
            </div>
            <div class="col-6">
                <input asp-for="address" class="form-control" />
            </div>
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="contactno">Contact Number</label>
            </div>
            <div class="col-6">
                <input asp-for="contactno" class="form-control" />
            </div>
            <span asp-validation-for="contactno" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="username">User Name</label>
            </div>
            <div class="col-6">
                <input asp-for="username" class="form-control" />
            </div>
            <span asp-validation-for="username" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="password">Password</label>
            </div>
            <div class="col-6">
                <input asp-for="password" class="form-control" />
            </div>
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.dID!=null? "Update":"Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back To Home Page</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}