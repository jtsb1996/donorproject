<!--Staff Admin Donation Record-->
@model DonorProject.Models.DonationRecord

<h2 class="text-info">@(Model.dID!=0? "Edit":"Create") Donation Record</h2>

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.dID != 0)
        {
            <input type="hidden" asp-for="dID" />

        }
        <input type="hidden" asp-for="status" value="Not Confirm" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="name">Name / Company Name</label>
            </div>
            <div class="col-6">
                <input asp-for="name" class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="nric">NRIC / Company Registration Number</label>
            </div>
            <div class="col-6">
                <input asp-for="nric" class="form-control" />
            </div>
            <span asp-validation-for="nric" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="type"></label>
            </div>
            <div class="col-3">
                <label class="form-check-label" for="radio1">
                    <input type="radio" asp-for="type" value="Individual" class="form-check-inline" />Individual
                </label>
            </div>
            <div class="col-3">
                <label class="form-check-label" for="radio2">
                    <input type="radio" asp-for="type" value="Company" class="form-check-inline" />Company
                </label>
            </div>
            <span asp-validation-for="type" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="address"></label>
            </div>
            <div class="col-6">
                <input asp-for="address" class="form-control" />
            </div>
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="contactNo"></label>
            </div>
            <div class="col-6">
                <input asp-for="contactNo" class="form-control" />
            </div>
            <span asp-validation-for="contactNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="taxExemption"></label>
            </div>
            <div class="col-3">
                <label class="form-check-label" for="radio1">
                    <input type="radio" asp-for="taxExemption" value="Yes" class="form-check-inline" />Yes
                </label>
            </div>
            <div class="col-3">
                <label class="form-check-label" for="radio2">
                    <input type="radio" asp-for="taxExemption" value="No" class="form-check-inline" />No
                </label>
            </div>
            <span asp-validation-for="taxExemption" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="dateOfDonation"></label>
            </div>
            <div class="col-6">
                <input asp-for="dateOfDonation" class="form-control" />
            </div>
            <span asp-validation-for="dateOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="amountOfDonation"></label>
            </div>
            <div class="col-6">
                <input asp-for="amountOfDonation" class="form-control" />
            </div>
            <span asp-validation-for="amountOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="receiptNo"></label>
            </div>
            <div class="col-6">
                <input asp-for="receiptNo" class="form-control" />
            </div>
            <span asp-validation-for="receiptNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="dateOfReceipt"></label>
            </div>
            <div class="col-6">
                <input asp-for="dateOfReceipt" class="form-control" />
            </div>
            <span asp-validation-for="dateOfReceipt" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="modeOfDonation"></label>
            </div>
            <div class="col-2">
                <label class="form-check-label" for="radio1">
                    <input type="radio" asp-for="modeOfDonation" value="cash" class="form-check-inline" />Cash
                </label>
            </div>
            <div class="col-2">
                <label class="form-check-label" for="radio2">
                    <input type="radio" asp-for="modeOfDonation" value="cashcard" class="form-check-inline" />CashCard
                </label>
            </div>
            <div class="col-2">
                <label class="form-check-label" for="radio2">
                    <input type="radio" asp-for="modeOfDonation" value="mastercard" class="form-check-inline" />MasterCard
                </label>
            </div>
            <span asp-validation-for="modeOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="purposeOfDonation"></label>
            </div>
            <div class="col-6">
                <input asp-for="purposeOfDonation" class="form-control" />
            </div>
            <span asp-validation-for="purposeOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="remarks"></label>
            </div>
            <div class="col-6">
                <textarea rows="5" asp-for="remarks" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.dID!=0? "Update":"Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back To Home Page</a>
            </div>
        </div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div>@Html.ValidationSummary()</div>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}