@{
    ViewData["Title"] = "View Donor Record";
}

<div class="container row p-0 m-0">
    <div>
        <h2>Donor Archive</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style=" width:100%">
            <thead>
                <tr>
                    <th>Archive Date</th>
                    <th>Name</th>
                    <th>Nric</th>
                    <th>Address</th>
                    <th>Contact No</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        <button class="btn btn-info text-white" onclick="ArchiveDonorRecord('/staffadmin/ArchiveDonorRecords')">
            Archive Donor Record
        </button>
    </div>
</div>


@section Scripts{
    <script src="~/js/viewDonorArchive.js"></script>
}
